# there are three screens
windowManager:
    loginWindow:
    signupWindow:
    logDataWindow:

# GUI for the login window
<loginWindow>:
    email : email
    pwd : pwd
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"
    FloatLayout:
        size: root.width, root.height
        #Label:
         #   text : "EMAIL: "
          #  size_hint : 0.2, 0.1
           # pos_hint : {"x":0.25, "top":0.9}
        MDCard:
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            radius: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
           
            MDLabel:
                id: welcome_label
                text: "WELCOME"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDTextFieldRound:
                id : email
                hint_text: "e-mail"
                icon_left: "email"
                multiline :False
                font_size: 16
                size_hint_y: None
                pos_hint : {"ceter_x": 0.5}
            #Label:
            #   text : "PASSWORD: "
            #  size_hint : 0.2, 0.1
            # pos_hint : {"x" : 0.25, "top" : 0.7}
            
            MDTextFieldRound:
                id : pwd
                hint_text: "password"
                icon_left: "eye-off"
                multiline :False
                size_hint_y: None
                pos_hint : {"ceter_x": 0.5}
            
            MDRoundFlatButton:
                text : "Create an account"
                pos_hint : {"center_x": 0.5}
                on_release:
                    app.root.current = 'signup'
                    root.manager.transition.direction = "left"
            
            MDRoundFlatButton:
                text : "LOGIN"
                pos_hint : {"center_x": 0.5}
                font_size: 12
                on_release:
                    root.validate()
                    root.manager.transition.direction = "up"
            
            Widget:
                size_hint_y: None
                height: 10

# GUI for the signup window
<signupWindow>:
    name2 : name2
    email : email
    pwd : pwd
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "bg.jpg"

        MDCard:
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            radius: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'

            MDLabel:
                id: signup_label
                text: "Sign-up"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
            
            MDTextFieldRound:
                id : name2
                hint_text: "username"
                #icon_right: "eye-off"
                multiline : False
                size_hint_y : None
                pos_hint : {"center_x": 0.5}
            
            MDTextFieldRound:
                id : email
                hint_text: "email"
                #icon_right: "eye-off"
                multiline : False
                size_hint_y : None
                pos_hint : {"center_x": 0.5}
            
            MDTextFieldRound:
                id : pwd
                hint_text: "password"
                #icon_right: "eye-off"
                multiline : False
                size_hint_y : None
                pos_hint : {"center_x": 0.5}
            
            MDRoundFlatButton:
                text : "SUBMIT"
                pos_hint : {"center_x": 0.5}
                on_press :
                    root.signupbtn()
                    root.manager.transition.direction = "right"
            
            Widget:
                size_hint_y: None
                height: 10

# GUI to show validation result
<logDataWindow>:
    info : info
    FloatLayout:
        

        MDCard:
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            radius: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'

            MDLabel:
                id : info
                size_hint : 0.8, 0.2
                pos_hint : {"center_x": 0.5}
                text : "SUCCESSFULLY LOGGED IN"

            MDRoundFlatButton:
                text : "Login"
                size_hint_y : None
                pos_hint : {"center_x": 0.5}
                on_release:
                    app.root.current = 'login'
                    root.manager.transition.direction = "down"

            MDRoundFlatButton:
                text : "Create new account"
                size_hint_y : None
                pos_hint : {"center_x": 0.5}
                on_release:
                    app.root.current = 'signup'
                    root.manager.transition.direction = "down"
            
            Widget:
                size_hint_y: None
                height: 10

# GUI for pop up window
<P>:
    Label:
        text : "Please enter valid information"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.8}
